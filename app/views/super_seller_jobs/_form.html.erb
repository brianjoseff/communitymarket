  <%= form_for(@super_seller_job) do |f| %>
    <% if @super_seller_job.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@super_seller_job.errors.count, "error") %> prohibited this Super Seller Job from being saved:</h2>

        <ul>
        <% @super_seller_job.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.hidden_field :owner_id, value: current_user.id %>

    <div class="field">
      <%= f.label :phone, "Make sure your phone number is correct. Your Super Seller will use this number to contact you." %>
      <div class="required"></div>
      <%= f.text_field :phone, id: 'phone', class: "form-control", value: @user.phone %>
    </div>

    <div class="field">
      <%= f.label :estimated_value, "What's the total estimated value of all your items?" %>
      <div class="required"></div>

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">$</div>
          <%= f.text_field :estimated_value, class: "form-control", placeholder: "100" %>
        </div>
      </div>
    </div>

    <strong>For any items that don't sell, what would you like your SuperSeller to do with them?</strong><div class="required"></div>

    <div class="radio">
        <%= f.radio_button :sell_options, 'donate', :checked => true %>
        <%= f.label :sell_options, 'Donate / Toss', :value => 'donate' %>
    </div>
    <div class="radio">
        <%= f.radio_button :sell_options, 'return' %>
        <%= f.label :sell_options, 'Give back to you', :value => 'return' %>
    </div>


    <div class="field">
      <%= f.label :pickup_location, "Where exactly should your items be picked up?" %>
      <div class="required"></div>
      <%= f.text_field :pickup_location, class: "form-control", placeholder: "ex. Room 205 2nd Schnader North..." %>
    </div>


    <div class="field">
      <%= f.label :notes, "Any additional notes for your Super Seller?" %>
      <%= f.text_area :notes, rows: "4", cols: "50", class: "form-control", placeholder: "ex. Moving out so need to sell a chair and some textbooks. Text me when you get here..." %>
    </div>

    <div class="actions">
      <div class="text-center"><%= f.submit :class => 'btn btn-success' %></div>
    </div>
  <% end %>

