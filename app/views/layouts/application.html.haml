!!!
%html
  %head
    %title People and Stuff
    %link{:href => 'http://fonts.googleapis.com/css?family=Open+Sans:400,700,800', :rel => "stylesheet", :type => "text/css"}/
    %link{:href => 'http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css', :rel => "stylesheet", :type => "text/css"}
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "https://js.stripe.com/v2/", "application"
    %meta{:name=>"description", :content=> "A community marketplace where it's SUPER easy to buy and sell stuff. Get used items from people you know and trust, OR new items from sustainable businesses. Strengthen your community, save money, help the environment."}
      
      
    :javascript
      $(function() {
        var t1 = new Array( "Sell", "Get", "Borrow", "Give");
        var i = 0;
        var width;
        var tid = setInterval(
            function() {
                $("#changingtext span").animate({'opacity': 0}, 1000, function () {
                  $(this).text(t1[i]);
                  width = $('#chkWidth').text(t1[i]).width();
                  console.log(t1[i], width);
                  $(this).animate({'opacity': 1, 'width': width}, 1000);
              });

              if(i < t1.length -1) 
                  i++;
              else i = 0;

            }, 3000 );

      });
      $(function() {
        var t2 = new Array( "people that care", "Dartmouth Students", "your workplace", "Upper Valley cyclists", "your teammates", "targeted groups" );
        var i2 = 0;
        var width;
        var tid2 = setInterval(
            function() {
                $("#changingtext2 span").animate({'opacity': 0}, 1000, function () {
                  $(this).text(t2[i2]);
                  width = $('#chkWidth2').text(t2[i2]).width() +100;
                  console.log(t2[i2], width);
                  $(this).animate({'opacity': 1, 'width': width, 'height':38.5}, 1000);
              });

              if(i2 < t2.length -1) 
                  i2++;
              else i2 = 0;

            }, 3000 );

      });
    
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-37799908-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    = csrf_meta_tags
    = tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY
  %body
    %div.container
      %div#nav
        =render 'layouts/header'
    %div.container
      = yield
      = debug(params) if Rails.env.development?
      /%div#signup_modal.modal.hide
    %footer