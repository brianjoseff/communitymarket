
%div.row

%div.row
  %div.span12
    %ul 
      %li get rid of stuff
      %li ask for stuff
      %li notify certain groups of people

%div.row
  %div.span3
    /new post button
    =link_to "Post  a Post", new_post_path, :class => "btn btn-primary", :role => "button"
  %div.span9
    /search bar
    =render :partial => "search/search_form"

%div.row
  %div.span8
    %div.post-feed
      %h2 Posts
      
      /Should put these buttons on a "search result page"
      /Sorting buttons
      /=sort_link @sort_posts, :name, "Name"
      /=sort_link @sort_posts, :released_on, "release date"
      
      / =link_to "Name", sort_name_posts_path
      
      /Post feed
      =render :partial => 'feed',:locals => {:feed_items => @posts}
  %div.span4
    %div.row-fluid
      -if current_user
        %h2 Followed Tags
        -@followed_tags.each do |tag|
          =link_to tag.name, tag_url(tag), :class => "tag"
      / -else
      /   /popular tags?
    %div.row-fluid
      %div.span6
        %h2 Groups
      %div.span6
        -if current_user
          =link_to "Create a group", new_group_path, :class => "btn group-button pull-right", :role => "button", :id => "front_page_new_group"
        -else
          =link_to_modal "Join", new_user_path, :class => "btn btn-mini", :remote => true
        
    %div.row-fluid
      %p join groups to get notifications from them. Manage your notifications on your profile page
      /Group feed
      =render :partial => 'feed', :locals => {:feed_items => @groups}
    %div.row-fluid
      %h3 Random Groups
      =render :partial => 'random_group_feed', :locals => {:feed_items => @random_groups}



