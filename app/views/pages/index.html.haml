%div.banner
  -if !current_user
    %div#top_banner_row.row
      %div.span12
        %h1
          %span#chkWidth{:style => "display: none;"}
        %h1#changingtext
          %span.toggle Sell
          Stuff     
    %div.row
      %div.span12
        %h1
          %span#chkWidth2{:style => "display: none;"}
        %h1#changingtext2
          Notify
          %span.toggle Groups of people
  -else
    %div.row
      %div.span12
        %div.row-fluid
          %h5 Join some groups so that when you post you can notify people in the groups
        %div.row-fluid
          =render :partial => 'shared/banner_group', :locals => {:groups => @random_groups}
      
%div.row-fluid
  %div.search-row
    %div.span3
      /new post button
      =link_to "Post Something", new_post_path, :id => "btn_post_flat", :role => "button"
    %div.span2
      %li.dropdown
        %a#shop_by_category.btn.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
          Shop By Category
          %b.caret
        %ul.dropdown-menu
          %li
            %a{href: @appliances ? tag_url(@appliances) : "#"} Appliances
          %li
            %a{href: @books ?tag_url(@books) : "#"} Books
          %li
            %a{href: @clothing ?tag_url(@clothing) : "#"} Clothing
          %li
            %a{href: @electronics ?tag_url(@electronics) : "#"} Electronics
          %li
            %a{href: @furniture ?tag_url(@furniture) : "#"} Furniture
          %li
            %a{href: @sports ?tag_url(@sports) : "#"} Sporting Goods

    %div.span7
      /search bar
      =render :partial => "search/search_form"

%div.row
  %div.span8
    %div.post-feed
      %div.row-fluid
        %div.span2
          %h2 Posts
        %div.span6.posts-nav
          %span
            =link_to "For Sale", for_sale_path, id: 'for_sale_link'
          %span 
            =link_to "Wanted", wanted_path, id: 'wanted_link'
          %span
            =link_to "For Rent/Borrow", borrow_rent_path, id: "borrow_rent_link"
      /Should put these buttons on a "search result page"
      /Sorting buttons
      /=sort_link @sort_posts, :name, "Name"
      /=sort_link @sort_posts, :released_on, "release date"
      
      / =link_to "Name", sort_name_posts_path
      
      /Post feed
      =render :partial => 'feed',:locals => {:feed_items => @posts}
  %div.span4
    / %div.advertising
    %a.advertising{:href => "http://www.moranogelato.com/", :target=>"Morano"}
    %a{ :href => "mailto:brianjoseff123@gmail.com?subject=Advertising with People and Stuff", :role => "button"} Advertise With Us!
    %div.row-fluid
      -if current_user
        %h4 Popular Tags
        -@popular_tags.each do |tag|
          %div#whole_tag
            %span#span-tag
            =link_to tag.name, tag_url(tag), :class => "tag"
        %div.row-fluid
          %i.icon-large.icon-tags
          =link_to "More tags...", tags_path
        %h4 Tags You Follow
        -@followed_tags.each do |tag|
          %div#whole_tag
            %span#span-tag
            =link_to tag.name, tag_url(tag), :class => "tag"
        %div.row-fluid
          %i.icon-large.icon-tags
          =link_to "More tags...", tags_path
      -else
        %h3 Tags
        -@random_tags.each do |tag|
          %div#whole_tag
            %span#span-tag
            =link_to tag.name, tag_url(tag), :class => "tag"
        %div.row-fluid
          %i.icon-large.icon-tags
          =link_to "More tags...", tags_path
      / -else
      /   /popular tags?
    -unless @near_groups.nil?
      %div.row-fluid
        %div.row-fluid
          %h3 Groups Close to You
          %span
            -if current_user
              =link_to "Create a group", new_group_path, :id => "front_page_create_group_link"
            -else
              =link_to "Create a group", new_user_path, :id => "front_page_create_group_link"

        %p Join specialized groups to make it easier to share your postings and get targeted notifications about stuff that matters to you
        =render :partial => 'random_group_feed', :locals => {:feed_items => @near_groups[0..5]}
    -if current_user
      %div.row-fluid
        %div.span8
          %h3 Your Groups      
      %div.row-fluid      
        /Group feed
        #your_groups
          -if !@your_groups.first.is_a?(Group)
            =link_to "Join some groups!", groups_path       
          -else
            /=render :partial => 'feed', :locals => {:feed_items => @your_groups}
            =render :partial => 'your_group_feed_item', :collection => @your_groups, :as => :group
    %div.row-fluid
      %h3 Random Groups
      =render :partial => 'random_group_feed', :locals => {:feed_items => @random_groups}




