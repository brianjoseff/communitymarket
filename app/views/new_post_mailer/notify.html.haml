-unless @post.assets.empty?
  =link_to image_tag(@post.assets.empty?  ? '/assets/small.png': @post.assets.first.image.url(:small), :alt => @post.title), post_url(@post)

%h2 #{@post_name}
%p #{@category}
%p #{@post_desc}
%p #{@post.price}

=post_url(@post, :host => "peopleandstuff.com")

-if @post.post_category.id == 2
  %p Get points for helping this person out. Then redeem points for giftcards to sustainable merchants or donate them to a local non-profit