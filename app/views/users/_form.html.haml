%div.row-fluid.control-group
  =f.label :email, :class => 'control-label'
  =f.text_field :email, :validate => true
%div.row-fluid.control-group
  =f.label :name, :class => 'control-label'
  =f.text_field :name
%div.row-fluid.control-group
  =f.label :phone, :class => 'control-label'
  =f.text_field :phone, type: "tel", :id => "phone", :value => @user.phone[1..-1]
%div.row-fluid.control-group
  =f.label :password, :class => 'control-label'
  =f.password_field :password, :validate => true
%div.row-fluid.control-group
  =f.label :super_seller, :class => 'control-label'
  =f.check_box :super_seller, :validate => true

%p.padding Updating your user settings will log you out of your account and you must log in again.

%div.user-submit
  = f.submit 'Update', class: "btn btn-primary submit-button"
