
%h1 Sign Up
=link_to "Sign In", signin_path
= simple_form_for @user,  html: {class: 'form-horizontal'} do |f|
  -if params[:group_id]
    =hidden_field_tag('group[member_ids][]', @user.id)
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
        
  %div.row-fluid
    %div.span4
      %div#name_field.control-group
        =f.label :name, :class => 'control-label'
        %div.controls
          =f.text_field :name, :class => "input-block-level inline", :placeholder => "Thomas More"        
      %div.control-group
        =f.label :email, :class => 'control-label'
        %div.controls
          =f.text_field :email, :class => "input-block-level inline", :placeholder => "hello@mom.com"  
      %div.control-group
        =f.label :password, :class => 'control-label'
        %div.controls
          =f.text_field :password, :class => "input-block-level inline", :placeholder => "Password"  
      %div.control-group
        %div.controls
          =f.submit "Sign Up", class: "btn btn-primary"
        /= f.button :submit, name: 'Sign Up', class: "btn-primary"
