                    =f.text_field :price, type: "text", :class => "pull-right form-control col-lg-5", :placeholder => "price", type:"text"
    %div#compensation{:style=>"display:none"}
      %div.row-fluid
        %div.span7.col-lg-7
          %div.form-group
            Compensation:
            =f.label :lump_sum, class: "radio" do
              =radio_button_tag 'compensation',1, true, class: "form-control lump compensation"
              =label_tag "Lump Sum"
              %div#lump_text
                $
                =f.text_field :lump_sum, id:"lump_text", class:"span4", type:"text"
            =f.label :hourly_rate, class: "radio" do
              =radio_button_tag 'compensation',2, false, class: "form-control hrly compensation"
              =label_tag "hourly_rate"
              %div#hrly_text{:style=>"display:none"}
                $
                =f.text_field :hourly_rate, id:"hrly_text", class:"span4", type:"text"
                per hour
            =f.label :other, class: "radio" do
              =radio_button_tag 'compensation',3, false, class: "form-control other compensation"
              =label_tag "other"
              %div#other_text{:style=>"display:none"}
                =f.text_field :other, id:"other_text", class:"span8", type:"text"
