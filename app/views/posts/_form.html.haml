= form_for @post.new_record? ? setup_post(@post, @groups) : @post, :html => { role: "form", :multipart => true, :class => "form-horizontal user-post #{ @post.new_record? ? "form": "edit-form"}"} do |f|
  %fieldset
    - if @post.errors.any?
      #error_explanation
        %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
        %ul
          - @post.errors.full_messages.each do |msg|
            %li= msg

    =f.hidden_field :stripe_card_token
    %div.form-group
      =label_tag "Post Type",nil, class: "col-lg-2 control-label"
      .col-lg-7
        .btn-group{"data-toggle" => "buttons"}
          %button.switch.btn.btn-default.active{type:"radio", "data-id" => @post_categories.first.id, "id" => "category1", "data-toggle"=>"button"} #{@post_categories.first.name}
          -@post_categories[1..6].each do |c|
            %button.switch.btn.btn-default{type:"radio", "data-toggle"=>"button","data-id" => c.id, "id" => "category"+c.id.to_s} #{c.name} 
      =f.hidden_field :post_category_id, id: "post_cateogry_button_value", value: "1"

    
    /POST TITLE
    %div.form-group
      = f.label :title, :class => "col-lg-3 control-label"
      .col-lg-6
        = f.text_field :title,type:"text", :class => "form-control", :placeholder => "Perfectly Functional Dorm Fridge"

    /DESCRIPTION    
    %div.form-group
      = f.label :description, :class => "col-lg-2 control-label"
      .col-lg-6
        = f.text_area :description, type:"text", :class => "form-control", :placeholder => "clean, works well, 16 cubic feet, etc", :rows => "8"
  
  
  
  
