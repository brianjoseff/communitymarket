= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :borrow
    = f.check_box :borrow
  .field
    = f.label :tier
    = f.number_field :tier
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :post_category_id
    = f.number_field :post_category_id
  .field
    = f.label :premium
    = f.check_box :premium
  .actions
    = f.submit 'Save'
